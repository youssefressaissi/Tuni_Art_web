    {% extends 'base.html.twig' %}

    {% block title %}Cart index{% endblock %}

    {% block body %}
        <h1>Cart index</h1>
   
 
 
    <input id="search-input" type="form-control" placeholder="Search...">
    <title>AJAX Search Example</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   
   
    <script>
        $(document).ready(function() {
            $("#search-input").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("table tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <div id="cartContainer">
        <div id="specificCartUid"></div>
        <div id="debugInfo"></div>
    </div>

    
        <hr>
        <table class="table" style="margin:50px">
            <thead>
                <tr>
                    <th>CartRef</th>
                    <th>UserID</th>
                    <th>ArtRef</th>

                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for cart in carts %}
                <tr>
                    <td>{{ cart.cartRef }}</td>
                    <td>{{ cart.uid }}</td>
                    <td>{{ cart.artRef }}</td>
                    <td>
                        <a href="{{ path('app_cart_show', {'cartRef': cart.cartRef}) }}" class="btn btn-primary">show</a>
                        <a href="{{ path('app_cart_edit', {'cartRef': cart.cartRef}) }}" class="btn btn-outline-primary">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_cart_new') }}" class="btn btn-success" style="margin-left:50px">Create new</a>
        
