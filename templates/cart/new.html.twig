{% extends 'base.html.twig' %}

{% block title %}New Cart{% endblock %}

{% block body %}
    <h1>Create new Cart</h1>
    {% if errors is not empty %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {{ include('cart/_form.html.twig') }}

    <a href="{{ path('app_cart_index') }}">back to list</a>
    

{% endblock %}
