{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	{{ form_start(form) }}

	<div class="container" style="max-width: 860px; margin: 0 auto; padding: 20px; display: flex; flex-direction: column; justify-content: center; align-items: center;">
		<h1 class="h3 mb-3 font-weight-normal">Validate your Code</h1>

		{{ form_label(form.plainPassword, "Password", {'label_attr': {'class': 'form-element'}}) }}
		{{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your new password.'}}) }}
		<div class="aler alert-danger" style="background-color: inherit;">
			{{ form_errors(form.plainPassword) }}
		</div>
		{{ form_label(form.plainPasswordRepeat, " ", {'label_attr': {'class': 'form-element'}}) }}
		{{ form_widget(form.plainPasswordRepeat, {'attr': {'class': 'form-control', 'placeholder': 'Re-enter your new password.'}}) }}
		<div class="aler alert-danger" style="background-color: inherit;">
			{{ form_errors(form.plainPasswordRepeat) }}
		</div>
		<button class="btn btn-primary" style="margin-top:10px;">Reset Password</button>
	</div>
	{{ form_end(form) }}

{% endblock %}
