{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>OrderId</th>
                <th>OrderDate</th>
                <th>Totalprice</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.orderId }}</td>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d') : '' }}</td>
                <td>{{ order.totalprice }}</td>
                <td>{{ order.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_order_show', {'orderId': order.orderId}) }}">show</a>
                    <a href="{{ path('app_order_edit', {'orderId': order.orderId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_new') }}">Create new</a>
{% endblock %}
