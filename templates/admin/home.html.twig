{% extends "admin/base.html.twig" %}

{% block body %}
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Dashboard</h1>

        <div style="width: 50%; margin: auto;">
            <canvas id="genderPieChart"></canvas>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            var genderData = {{ genderData|json_encode|raw }};
            var labels = [];
            var data = [];

            // Extract gender labels and counts
            genderData.forEach(function(gender) {
                labels.push(gender.label);
                data.push(gender.value);
            });

            var ctx = document.getElementById('genderPieChart').getContext('2d');
            var myPieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Gender Distribution',
                        data: data,
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 99, 132, 0.2)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    // You can customize chart options here if needed
                }
            });
        </script>

    </div>
    <!-- /.container-fluid -->
{% endblock %}
