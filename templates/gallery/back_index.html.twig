{% extends 'admin/base-back.html.twig' %}

{% block title %}Gallery index{% endblock %}

{% block body %}
    <h1>Gallery index</h1>

    {# Search Bar #}
 <input id="search-input" type="form-control" placeholder="Search...">
<title>AJAX Search Example</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#search-input").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("table tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    

    <table class="table">
        <thead>
            <tr>
                <th>GalleryId</th>
                <th>GalleryName</th>
                <th>GalleryDescription</th>
                <th>GalleryLocation</th>
                <th>GalleryTel</th>
                <th>OperatingHours</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gallery in galleries %}
            <tr>
                <td>{{ gallery.galleryId }}</td>
                <td>{{ gallery.galleryName }}</td>
                <td>{{ gallery.galleryDescription }}</td>
                <td>{{ gallery.galleryLocation }}</td>
                <td>{{ gallery.galleryTel }}</td>
                <td>{{ gallery.operatingHours }}</td>
                <td>
                    {{ include('gallery/_delete_form.html.twig') }}
                    <a href="{{ path('app_gallery_edit', {'galleryId': gallery.galleryId}) }}" class="btn btn-primary" style="margin:10px">edit</a>
                </td>
            </tr>
        {% else %}
        <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gallery_new') }}" class="btn btn-success"style="margin:10px">Create new</a>

    
{% endblock %}