{% extends 'base.html.twig' %}

{% block title %}QR Code{% endblock %}

{% block body %}
<div class="container">
    
    <div class="row mb-3">
        <div class="col-md-12">
            <h1>QR Code for User: {{ user.fname ~ ' ' ~ user.lname }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12  text-center">
            <img src="{{ qrCode }}" alt="QR Code for {{ user.fname ~ ' ' ~ user.lname }}" class="img-fluid">
        </div>
    </div>
</div>
{% endblock %}