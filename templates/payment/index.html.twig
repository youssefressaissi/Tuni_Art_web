{% extends 'base.html.twig' %}

{% block title %}Hello PaymentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1></h1>
<ul id="selected-arts-list"></ul>
<div id="total-price"></div>
  
    <ul>
       
    </ul>
</div>
<script>
document.addEventListener('DOMContentLoaded', function () {
    // Retrieve the selected arts from sessionStorage
    var selectedArtsJson = sessionStorage.getItem('selectedArts');
    if (selectedArtsJson) {
        var selectedArts = JSON.parse(selectedArtsJson);
        
        // Display the selected arts on the payment page
        var artsList = document.getElementById('selected-arts-list');
        selectedArts.forEach(function(art) {
            var listItem = document.createElement('li');
            listItem.textContent = 'Title: ' + art.title + ', Price: ' + art.price;
            artsList.appendChild(listItem);
        });
    }
});

</script>
{% endblock %}
